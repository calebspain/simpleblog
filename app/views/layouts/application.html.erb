<!DOCTYPE html>
<html>
  <head>
    <title>Simpleblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <div>
        <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to "Simple Blog", home_path %></h5>
        <span class="btn btn-outline-primary"><%= link_to "Create Post", new_post_path %></span>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
